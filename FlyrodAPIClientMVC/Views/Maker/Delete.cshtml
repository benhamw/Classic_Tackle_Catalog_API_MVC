@model FlyrodAPIClientMVC.Models.Maker

@{
    ViewData["Title"] = "Delete";
}

<h1 class="page-header">Delete Maker</h1>

<div class="not-table">
    <h3 style="color: green; background-color: #eee">Are you sure you want to delete this Maker?</h3>
    <br />
    <dl class="row">
        <dt class="col-sm-2">
            Maker Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Year Founded
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.YearFounded)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Type)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Type)
        </dd>
    </dl>
    <br />
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="red">Back to List</a>
    </form>
</div>

