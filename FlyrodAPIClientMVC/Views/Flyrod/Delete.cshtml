@model FlyrodAPIClientMVC.Models.Flyrod

@{
    ViewData["Title"] = "Delete";
}

<h1 class="page-header">Delete Flyrod</h1>


<div class="not-table">
    <h3 style="color: green; background-color: #eee">Are you sure you want to delete this flyrod?</h3>
    <dl class="row">
        <dt class="col-sm-2">
            Maker
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Maker.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Model)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Model)
        </dd>
        <dt class="col-sm-2">
            Length (ft)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LengthFeet)
        </dd>
        <dt class="col-sm-2">
            # of sections
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Sections)
        </dd>
        <dt class="col-sm-2">
            Line Weight
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LineWeight)
        </dd>
        <dt class="col-sm-2">
            Year Made
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.YearMade)
        </dd>
        <dt class="col-sm-2">
            Material
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Type)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Construction)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Construction)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="red">Back to List</a>
    </form>
</div>
